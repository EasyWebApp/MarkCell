{
    "name": "mark-cell",
    "version": "0.4.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "General MDX to TSX converter",
    "keywords": [
        "mdx",
        "tsx",
        "converter",
        "jsx",
        "react",
        "web-cell"
    ],
    "homepage": "https://github.com/EasyWebApp/MarkCell#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/MarkCell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/MarkCell/issues"
    },
    "bin": "dist/index.js",
    "engines": {
        "node": "^10.0.0"
    },
    "dependencies": {
        "commander": "^5.0.0",
        "jsdom": "^16.2.1",
        "mdast-util-to-hast": "^8.1.0",
        "prismjs": "^1.19.0",
        "rehype-parse": "^6.0.2",
        "remark-frontmatter": "^1.3.3",
        "remark-mdx": "^1.5.7",
        "remark-parse": "^7.0.2",
        "remark-stringify": "^7.0.4",
        "toml": "^3.0.0",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3",
        "unified": "^8.4.2",
        "web-cell": "^2.0.0-rc.20",
        "web-utility": "^0.12.1",
        "yaml": "^1.8.3"
    },
    "devDependencies": {
        "@types/jsdom": "^16.1.1",
        "@types/node": "^13.9.3",
        "@types/prismjs": "^1.16.0",
        "@types/yaml": "^1.2.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.9",
        "prettier": "^2.0.2",
        "snabbdom": "^0.7.4"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,mdx,json,ts,tsx}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "lint": "lint-staged",
        "build": "rm -rf dist/  &&  tsc",
        "debug": "node dist/ test/source/ -p web-cell -f createCell -l test/layout",
        "test": "rm -rf test/dist/ test/public  &&  npm run build  &&  npm run debug",
        "prepublishOnly": "npm run lint  &&  npm test"
    },
    "husky": {
        "pre-commit": "npm run lint",
        "pre-push": "npm test"
    }
}
